<div class="container mt-5">
  <h1>Lawyers</h1>
  <table class="table">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Address</th>
  </tr>
  <% @lawyers.each do |lawyer| %>
  <tr>
    <td><%= lawyer.full_name %></td>
    <td><%= lawyer.user.email %></td>
    <td><%= lawyer.address %></td>
  </tr>
  <% end %>
</table>
</div>